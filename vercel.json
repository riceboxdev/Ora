{
  "buildCommand": "cd admin-dashboard && npm install && npm run build",
  "outputDirectory": "admin-dashboard/dist",
  "installCommand": "cd admin-dashboard && npm install",
  "framework": "vite",
  "builds": [
    {
      "src": "api/[...route].js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/**": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/[...route]"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}